<%- include('./partials/header') %>
<div class="main">
    <div id="dashboard-container">
        <h1>My Projects</h1>
        <table class="primary-table">
            <tbody>
                <% if(projects.length === 0){ %>
                    <h3>No projects to view. Create a project!</h3>
                <% }else{ %>
                    <table class="primary-table">
                        <tbody>
                            <% projects.forEach(function(p){ %>
                                <tr>
                                    <td><%= p.projectName %></td>
                                    <td>
                                        <form action="/projects/<%= p._id %>/edit" method="GET">
                                            <button class="edit" type="submit">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                                                    <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"/>
                                                </svg>
                                            </button>
                                        </form>
                                    </td>
                                    <td>
                                        <form action="/projects/<%= p._id %>?_method=DELETE" method="POST">
                                            <button class="delete" type="submit">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="white" class="bi bi-trash" viewBox="0 0 16 16">
                                                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                                                    <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                                                  </svg>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                <% } %>
        <a class="primary-button" href="/projects/new">New Project</a>
        <h1>My Pledges</h1>
        <% if(myPledges.length === 0){ %>
            <h3>No pledges to view. Go pledge some shit!</h3>
        <% }else{ %>
            <table class="primary-table">
                <thead>
                    <th>Project</th>
                    <th>Total Pledge</th>
                </thead>
                <tbody>
                    <% myPledges.forEach(function(pledge){ %>
                        <tr>
                            <td> <%= pledge.name %> </td>
                            <td> <%= pledge.totalPledge %> </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } %>
        <h1>My Wallet</h1>
        <% walletArray = wallet[0].amount.toString().split('') %>
        <% if(wallet[0].amount > 999){walletArray.splice(walletArray.length - 3, 0, ',')} %>
        <h2 class="status"> <%= `$${walletArray.join('')}` %> </h2>
        <form id="update-wallet-form" method="POST" action="/wallet/<%= user._id %>?_method=PUT">
            <div class="money-input">
                <span>$</span>
                <input type="number" min=".01" step="any" name="amount">
            </div>
            <input class="primary-button" type="submit" value="Add Funds">
        </form>
    </div>
</div>
<%- include('./partials/footer') %>